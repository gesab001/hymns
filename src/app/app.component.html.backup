<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell">
      <mat-drawer-container class="example-container"
                            (swipeleft)="onSwipeLeft($event)"
                            (swiperight)="onSwipeRight($event)"
                           >
        <mat-drawer #drawer class="example-sidenav" mode="side">
   <p>Song is a weapon that we can always use against discouragement. (Ellen G. White)</p>
   <button type="button" mat-button (click)="drawer.toggle()">
            <span class="material-icons">close</span>
          </button>
          <form class="example-form">
            <mat-form-field class="example-full-width">

              <input matInput type = "text" #inputElement
                     [(ngModel)]="value"
                     placeholder = "Pick a hymn"
                     aria-label = "Number"
                     matInput
                     [formControl] = "myControl"
                     [matAutocomplete] = "auto">
              <button mat-button *ngIf="value" matSuffix mat-icon-button aria-label="Clear" (click)="value=''">
                    <mat-icon>close</mat-icon>
              </button>
              <mat-autocomplete #auto = "matAutocomplete" (optionSelected)="itemSelected($event.option.value)">
                <mat-option *ngFor="let option of filteredOptions | async" [value]="option">
                  {{option}}
                </mat-option>
              </mat-autocomplete>
            </mat-form-field>
          </form>
          <!--          <p>Auto-resizing sidenav</p>-->
          <!--          <p *ngIf="showFiller">Lorem, ipsum dolor sit amet consectetur.</p>-->
          <!--          <button (click)="showFiller = !showFiller" mat-raised-button>-->
          <!--            Toggle extra text-->
          <!--          </button>-->
mat

          <mat-accordion>
            <mat-expansion-panel>
              <mat-expansion-panel-header>
                <mat-panel-title>
                  Hymn Info
                </mat-panel-title>

<!--                <mat-panel-description>-->
<!--                  Type your name and age-->
<!--                </mat-panel-description>-->
              </mat-expansion-panel-header>

              <mat-card class="example-card">
                <mat-card-header>
                  <div mat-card-avatar class="example-header-image"></div>
                  <mat-card-title>{{hymnsJson[currentHymn]['number'] + " - " + hymnsJson[currentHymn]['title']}}</mat-card-title>
                  <mat-card-subtitle>{{hymnsJson[currentHymn]['topic']}}</mat-card-subtitle>

                </mat-card-header>
                <img mat-card-image src="/assets/images/008.png" alt="Photo of We Gather Together">
                <mat-card-content>
                  <p><span>Scripture: </span>{{hymnsJson[currentHymn]['hymn_info']['scripture']}}</p>
                  <p>
                    <span>Author/s: </span>
                    <span><button *ngFor="let author of hymnsJson[currentHymn]['hymn_info']['authors']">
                      {{author.name}}
                    </button> </span>
                  </p>
                  <p><span>Composer: </span>{{hymnsJson[currentHymn]['hymn_info']['composer'].name}}</p>
                  <p ><span>Tune: </span>{{hymnsJson[currentHymn]['hymn_info']['tune']}}</p>
                  <p><span>Meter: </span>{{hymnsJson[currentHymn]['hymn_info']['meter']}}</p>
                  <p ><span>Copyright: </span> {{hymnsJson[currentHymn]['hymn_info']['copyright']}}</p>


                </mat-card-content>
                <mat-card-actions>
                  <button mat-button>LIKE</button>
                  <button mat-button>SHARE</button>
                </mat-card-actions>
              </mat-card>

<!--              <mat-form-field>-->
<!--                <mat-label>First name</mat-label>-->
<!--                <input matInput>-->
<!--              </mat-form-field>-->

<!--              <mat-form-field>-->
<!--                <mat-label>Age</mat-label>-->
<!--                <input matInput type="number" min="1">-->
<!--              </mat-form-field>-->
            </mat-expansion-panel >
            <mat-expansion-panel (opened)="panelOpenState = true"
                                 (closed)="panelOpenState = false">
              <mat-expansion-panel-header>
                <mat-panel-title>
                  Videos
                </mat-panel-title>
<!--                <mat-panel-description>-->
<!--                  Currently I am {{panelOpenState ? 'open' : 'closed'}}-->
<!--                </mat-panel-description>-->
              </mat-expansion-panel-header>

                      <app-videos [message]="hymnsJson[currentHymn]['title']"></app-videos>


<!--              <p>I'm visible because I am open</p>-->
            </mat-expansion-panel>
            <mat-expansion-panel (opened)="panelOpenState = true"
                                 (closed)="panelOpenState = false">
              <mat-expansion-panel-header>
                <mat-panel-title>
                  MP3s
                </mat-panel-title>


                <!--                <mat-panel-description>-->
                <!--                  Currently I am {{panelOpenState ? 'open' : 'closed'}}-->
                <!--                </mat-panel-description>-->
              </mat-expansion-panel-header>

			<mat-tab-group>
			  <mat-tab>
			    <ng-template mat-tab-label>
                <mat-icon svgIcon="spotify" aria-hidden="false" aria-label="spotify icon"></mat-icon>
			      Spotify
			    </ng-template>
			  <app-spotify [message]="{filename: hymnsJson[currentHymn]['spotify']}"></app-spotify>
			  </mat-tab>

			  <mat-tab>
			    <ng-template mat-tab-label>
                <mat-icon svgIcon="itunes" aria-hidden="false" aria-label="itunes icon"></mat-icon>
			      Itunes
			    </ng-template>
			    <app-itunes [message]="{filename: hymnsJson[currentHymn]['spotify']}"></app-itunes>    
			  </mat-tab>

			</mat-tab-group>

            
          
              <!--              <p>I'm visible because I am open</p>-->
            </mat-expansion-panel>
          </mat-accordion>
          <mat-divider></mat-divider>




          <!--          <h3>{{hymnsJson[currentHymn]['hymn-info']['scripture']}}</h3>-->


        </mat-drawer>

        <div class="example-sidenav-content"   >
          <button type="button" mat-button (click)="drawer.toggle()">
            <span class="material-icons">menu</span>
          </button>
          <span class='mat-subheading-2'>{{hymnsJson[currentHymn]['number'] + " - " + hymnsJson[currentHymn]['title']}}</span>




        </div>

        <div  class="slides" ngModel="max" align="center" (tap)="onTap($event)">

          <h2 #verseTitle class="mat-display-2">{{hymnsJson[currentHymn]['verses'][slideNumber]['verse_title']}}</h2>

          <mat-slider #slider
                      (input)="onInputChange($event)"
                      thumbLabel
                      [displayWith]="formatLabel"
                      tickInterval="1"
                      min="0"
                      [max]="max">

          </mat-slider>
          <h1 [ngClass]="{'mat-body-1': isMobile, 'mat-display-1': !isMobile}" *ngFor="let line of hymnsJson[currentHymn]['verses'][slideNumber]['lines']">
            {{line}}
          </h1>
        </div>



      </mat-drawer-container>

    </div>

  </div>
</div>
